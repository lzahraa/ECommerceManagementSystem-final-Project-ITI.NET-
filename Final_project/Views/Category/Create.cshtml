 @model Category

<h2>Add Category</h2>


<form asp-action="Create">
    <div asp-validation-summary="All" class="text-danger"></div>  @* show all errors at the Top*@
    <div asp-validation-summary="ModelOnly" class="text-danger"></div> @*note : Model only !!!!*@

    <div class="form-group mt-4">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span> @*Span is necessary*@
    </div>

    <div class="form-group mt-4">
        <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>


   

    <div class="form-group my-5">
