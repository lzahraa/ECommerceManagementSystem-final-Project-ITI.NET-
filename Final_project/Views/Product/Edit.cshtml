    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    
        <input type="hidden" asp-for="ProductId" />


    <div class="form-group mt-4">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
