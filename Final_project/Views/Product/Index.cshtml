    @model IEnumerable<Product>

<table class="table table-hover text-center align-middle">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Product ID</th>
            <th scope="col">Title</th>
            <th scope="col">Price</th>
            <th scope="col">Category Name</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.ProductId</th>
                <td>@item.Title</td>
                <td>@item.Price.ToString("C", new System.Globalization.CultureInfo("en-EG"))

                <td>@item.Category!.Name</td>
                <td>
                    <a asp-controller="Product" asp-action="ViewDetails" asp-route-id="@item.ProductId" class="btn btn-info btn-sm mx-1">
                        <i class="fas fa-eye"></i> View
                    </a>
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-warning btn-sm mx-1">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-danger btn-sm mx-1">
                        <i class="fas fa-trash-alt"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <a asp-controller="Product" asp-action="Create" class="btn btn-success btn-sm btn-block">
            <i class="fas fa-plus-circle"></i> Add Your Product Now!
        </a>
    </tfoot>
</table>
