@model Product

<div class="card" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">Product name: @Model.Title</h5>
        <h6 class="card-subtitle mb-2 text-muted">Product ID: @Model.ProductId</h6>
        <h6 class="card-subtitle mb-2 text-muted">Product Price: @Model.Price</h6>
        <h6 class="card-subtitle mb-2 text-muted">Product Description: @Model.Description</h6>                         @*  remove from index*@
        <h6 class="card-subtitle mb-2 text-muted">Product Quantity: @Model.Quantity</h6>                               @*  remove from index*@
        <h6 class="card-subtitle mb-2 text-muted"> <img src="~/Images/@Model.ImagePath " style="width:250px" /></h6>    @*  remove from index*@

        <h6 class="card-subtitle mb-2 text-muted">Category Name: @Model.Category!.Name</h6>
        <a asp-controller="Product" asp-action="Index" class="btn btn-primary mt-4">Back to Home?</a>
    </div>
</div>
